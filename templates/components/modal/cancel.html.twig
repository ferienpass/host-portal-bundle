{% embed '@FerienpassHostPortal/components/modal.html.twig' with { id: id } %}
    {% block form %}
        <form :action="$refs.{{ id }}Link.href" :method="$refs.{{ id }}Link.dataset.method">
            <input type="hidden" name="REQUEST_TOKEN" value="{{ contao_request_token() }}">
            <div class="sm:flex sm:items-start">
                <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                    <span class="block h-6 w-6 text-red-600">{{ source('@FerienpassHostPortal/icons/exclamation.svg') }}</span>
                </div>
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                    <h3 class="text-lg leading-6 font-medium text-gray-900"
                        id="modal-headline-{{ id }}">Angebot absagen</h3>
                    <div class="mt-2">
                        <p class="text-sm leading-5 text-gray-500">
                            Sind Sie sicher, dass Sie folgendes Angebot absagen möchten?
                        </p>
                        <p class="text-sm leading-5 text-gray-500 mt-2 sm:mt-1">
                            <span class="font-medium">{{ offer.name }}</span>
                        </p>
                        <p class="text-sm font-medium leading-5 text-gray-600 mt-2">
                            {% if offer.onlineApplication %}
                                <span>Alle Teilnhemer:innen werden über die Absage informiert.</span>
                            {% else %}
                                <span>Stellen Sie sicher, dass Sie alle Teilnehmer:innen über die Absage informieren!</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
            <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                <button
                        class="relative shadow-sm inline-flex px-4 py-2 items-center border border-transparent text-sm leading-5 font-medium rounded-md focus:outline-none focus:border-blue-300 focus:shadow-outline mt-3 flex w-full justify-center text-base sm:text-sm sm:mt-0 sm:ml-4 sm:w-auto bg-red-600 text-white hover:bg-red-500 focus:border-red-700 focus:shadow-outline-red"
                        type="submit">Angebot absagen
                </button>

                <button
                        class="relative shadow-sm inline-flex px-4 py-2 items-center border border-transparent text-sm leading-5 font-medium rounded-md focus:outline-none focus:shadow-outline-blue bg-white border-gray-300 text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline mt-3 flex w-full justify-center text-base sm:text-sm sm:mt-0 sm:w-auto"
                        @click.prevent="modal = null">Abbrechen
                </button>
            </div>
        </form>
    {% endblock %}
{% endembed %}
