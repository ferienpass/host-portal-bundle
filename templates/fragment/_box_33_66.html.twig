<div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
            {% block left %}
                <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-50">{{ headline }}</h3>
                <p class="mt-1 text-sm leading-5 text-gray-500">{{ caption }}</p>
            {% endblock %}
        </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="shadow sm:rounded-md">
            <div class="bg-white sm:rounded-md dark:bg-gray-900 p-4 sm:p-6">
                {% block box %}{% endblock %}
            </div>
            {% block bottom %}{% endblock %}
        </div>
    </div>
</div>
